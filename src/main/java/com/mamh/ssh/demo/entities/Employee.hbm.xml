<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.mamh.ssh.demo.entities.Employee" table="hb_employee" schema="atguigu">
        <id name="id">
            <column name="hb_id" sql-type="int(11)"/>
        </id>
        <property name="lastName">
            <column name="hb_last_name" sql-type="varchar(1024)" length="1024" not-null="true"/>
        </property>
        <property name="email">
            <column name="hb_email" sql-type="varchar(1024)" length="1024" not-null="true"/>
        </property>
        <property name="birth">
            <column name="hb_birth" sql-type="datetime" not-null="true"/>
        </property>
        <property name="createTime">
            <column name="hb_create_time" sql-type="datetime" not-null="true"/>
        </property>

        <many-to-one name="department" class="com.mamh.ssh.demo.entities.Department">
            <column name="hb_dept"/>
        </many-to-one>

    </class>
</hibernate-mapping>